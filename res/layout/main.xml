<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
android:id="@+id/main_view"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:background="#ffffffff"
xmlns:android="http://schemas.android.com/apk/res/android"
>
    <ImageView   
        android:id="@+id/mainseal"
        android:src="@drawable/seal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dip"
         />

<Button
android:id="@+id/loginButton"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:text="Login and Refresh"
android:layout_marginLeft="60dip"
android:layout_marginRight="60dip"
android:layout_centerVertical="true"
android:layout_centerInParent="true"
android:layout_above="@+id/viewScheduleButton"
>
</Button>
<Button
android:id="@+id/viewScheduleButton"
android:layout_width="fill_parent"
android:layout_marginLeft="60dip"
android:layout_marginRight="60dip"
android:layout_centerInParent="true"
android:layout_height="wrap_content"
android:text="View Schedule"
android:layout_above="@+id/campusMapButton"
>
</Button>
<Button
android:id="@+id/campusMapButton"
android:layout_width="fill_parent"
android:layout_marginLeft="60dip"
android:layout_marginRight="60dip"
android:layout_height="wrap_content"
android:layout_centerInParent="true"
android:text="Campus Map"
android:layout_alignParentBottom="true"
android:layout_marginBottom="25dip"
>
</Button>
</RelativeLayout>
